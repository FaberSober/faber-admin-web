<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.faber.admin.mapper.ConfigMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.faber.admin.entity.Config" id="configMap">
        <result property="id" column="id"/>
        <result property="buzzModal" column="buzz_modal"/>
        <result property="type" column="type"/>
        <result property="name" column="name"/>
        <result property="data" column="data"/>
        <result property="system" column="system"/>
        <result property="hide" column="hide"/>
        <result property="sort" column="sort"/>
        <result property="belongUserId" column="belong_user_id"/>
        <result property="crtTime" column="crt_time"/>
        <result property="crtUser" column="crt_user"/>
        <result property="crtName" column="crt_name"/>
        <result property="crtHost" column="crt_host"/>
        <result property="updTime" column="upd_time"/>
        <result property="updUser" column="upd_user"/>
        <result property="updName" column="upd_name"/>
        <result property="updHost" column="upd_host"/>
        <result property="delState" column="del_state"/>
        <result property="delTime" column="del_time"/>
        <result property="delUser" column="del_user"/>
        <result property="delName" column="del_name"/>
        <result property="delHost" column="del_host"/>
    </resultMap>

    <select id="findMaxSort" parameterType="map" resultType="int">
        SELECT IFNULL(MAX(t.sort), 0)
        FROM base_config t
        WHERE t.del_state = '0'
          AND t.buzz_modal = #{buzzModal}
          AND t.type = #{type}
          AND t.belong_user_id = #{belongUserId}
    </select>


    <select id="clearOtherDefaultScene" parameterType="map">
        UPDATE base_config
        SET default_scene = '0'
        WHERE buzz_modal =  #{buzzModal}
          AND type =  #{type}
          AND belong_user_id = #{belongUserId}
    </select>

</mapper>